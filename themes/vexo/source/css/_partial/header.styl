.header {
  background: none;
  border: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 200;
  transition: background 0.5s;
}

.fixed-header {
  position: fixed;
  background-color: rgba(255, 255, 255, 0.98);
  box-shadow: 0 0 3px rgba(14, 14, 14, 0.26);

  .home-link {
    color: color-primary;
  }

  .menu .icon-bar {
    background-color: color-gray;
  }

  .item-link {
    color: color-dark;
  }
}

.header-container {
  // max-width: 1200px;
  height: 5vh;
  min-height: 50px;
  display: flex;
  justify-content: space-between;
  // margin: 0 auto;
  padding: 1vw 10vw;
  position: relative;
  background-color: #ffffff9e;

  @media m-mobile {
    padding: 5vw 10vw;
    position: relative;
  }
}

img.logo {
  width: 15vw;

  @media m-mobile {
    width: 35vw;
  }
}

.home-link {
  display: flex;
  align-items: center;
  // float: left;
  font-weight: 500;
  color: color-primary;
  font-size: 1.5em;
  line-height: 40px;

  h1 {
    font-size: 1.5rem;
    font-weight: inherit;
    text-shadow: 0 1px 6px rgba(35, 76, 132, 0.21);

    @media m-mobile {
      display: none;
    }
  }
}

.right-list {
  list-style: none;
  float: right;
  padding: 0;

  @media m-mobile {
    display: none;
  }
}

.list-item {
  display: inline-block;
  margin: 0 8px;
}

.item-link {
  height: 40px;
  line-height: 40px;
  text-decoration: none;
  color: color-primary;
  padding-bottom: 3px;
}

.item-link {
  &:hover {
    border-bottom: 3px solid color-primary;
  }
}

.active {
  border-bottom: 3px solid color-primary;
}

.menu {
  display: none;
  float: right;
  width: 24px;
  height: 24px;
  margin-top: 10px;

  .icon-bar {
    display: block;
    width: 24px;
    height: 2px;
    border-radius: 1px;
    margin-top: 4px;
    background-color: color-white;
  }

  @media m-mobile {
    display: block;
  }
}

.menu-mask {
  display: none;
  position: fixed;
  left: 0;
  top: 85px;
  z-index: 99;
  width: 100%;
  overflow: hidden;
  max-height: 0;
  background: rgba(255, 255, 255, 0.98);
  -webkit-transition: max-height 0.2s ease;
  transition: max-height 0.2s ease;
  border: 1px solid color-border;

  @media m-mobile {
    display: block;
  }
}

.open {
  max-height: 300px;
  transition-delay: 0.1s;
}

.menu-list {
  padding: 0;
}

.menu-item {
  position: relative;
  list-style: none;
  text-align: center;
  padding: 10px 0;

  &:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-bottom: 1px solid color-border;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
  }
}

.menu-link {
  text-decoration: none;
  color: color-gray;
}

.mobile-active {
  color: color-primary;
}