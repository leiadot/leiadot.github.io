.nav-container {
  width: 100%;
  padding: 1.5em 0;
  margin: 1.5em 0;
  border-top: 1px dashed color-border;
  border-bottom: 1px dashed color-border;
  font-weight: 600;

  &:after, &:before {
    content: '';
    display: table;
    clear: both;
  }

  .nav-left {
    float: left;
  }

  .nav-right {
    float: right;
  }

  .nav-arrow {
    color: color-dark;
  }
}
