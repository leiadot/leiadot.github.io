<div
  id="article-banner"
  style="background-image: url(<%- theme.about.shop %>)"
>
  <h1>Tags</h1>
  <p class="post-date"># hashTags</p>
</div>
<main class="app-body">
  <div id="tag-cloud">
    <% site.tags.map(function(tag, index) { %>
    <a
      class="tag<%= Math.round(Math.random() * 3) %>"
      data-name="tag-<%= tag.name %>"
    >
      <%= tag.name %></a>
    <% }) %>
  </div>
  <% site.tags.map(function(tag, index){ %>
  <div class="tag-list">
    <h3
      class="tag-name"
      id="tag-<%= tag.name %>"
    >
      <%= tag.name %>
    </h3>
    <% tag.posts.map(function(post) { %>
    <ul class="tag-preview">
      <li>
        <a href="<%- config.root %><%- post.path %>">
          <%- post.title || "Untitled" %></a>
      </li>
    </ul>
    <% }) %>
  </div>
  <% }) %>
</main>

<script>
  (function () {
    var tag = location.hash.replace('#', '')
    if (tag) {
      var tagId = "#tag-" + tag;
      $("html, body").animate({
        scrollTop: $(tagId).offset().top
      }, 400)
    }
  })();
</script>