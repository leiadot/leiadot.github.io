<div class="archive content-area">
  <div class="container">
    <h1 class="entry-title">
      <%= page.tag %>
    </h1>
    <div class="row">
      <div class="archive-list-container">
            <ul class="list">
            <% page.posts.each(function(post){ %>
              <li>
                <span class="date"><%= post.date.format('YYYY-MM-DD') %></span>
                <a href="<%- url_for(post.path) %>" class="title">
                    <%= post.title %>
                </a>
              </li>
            <% }) %>
            </ul>
            <% if (page.prev || page.next){ %>
              <div class="container">
                <ul class="tags pager">
                  
                      <% if (page.next){ %>
                        <li class="next">
                          <a href="<%- config.root %><%- page.next_link %>">
                            <span class="meta-arraw meta-arraw-left"> </span>
                            <%- __('prev')%>
                          </a>
                        </li>
                        <% } %>
            <% if (page.prev){ %>
              <li class="previous">
                <a href="<%- config.root %><%- page.prev_link %>">
                  <%- __('next')%>
                    <span class="meta-arraw meta-arraw-right"></span>
                </a>
              </li>
              <% } %>
                </ul>
              </div>
              <% } %>
      </div>
    </div>
  </div>
</div>